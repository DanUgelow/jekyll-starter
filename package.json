{
  "name": "jekyll-starter",
  "version": "1.0.1",
  "description": "Jekyll Starter without too many bells and whistles",
  "main": "index.html",
  "scripts": {
    "uglify:jsjquery": "mkdir -p assets/js && uglifyjs _app/js/*.js -m -o assets/js/app.js && uglifyjs node_modules/jquery/dist/jquery.js _app/js/*.js -m -c -o assets/js/app.min.js",
    "lint:js": "eslint _app/js",
    "build:js": "npm run lint:js && npm run uglify:js-listjs && npm run uglify:js-lunrjs",
    "watch:js": "onchange '_app/js/*.js' -- npm run build:js",
    "compress:img": "imagemin _app/images assets/images -p",
    "watch:img": "onchange '_app/images/**/*.*' -- npm run compress:img",
    "serve": "browser-sync start --server '_site' --files './_site/assets/js/app.min.js' './_site/assets/css/main.css'",
    "reload": "browser-sync reload",
    "initialize": "npm-run-all copy:files build:css build:js uglify:js-lunrjs compress:img build:jekyll",
    "start": "npm-run-all build:jekyll --parallel watch:css watch:js watch:jekyll watch:img serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/budparr/jekyll-base.git"
  },
  "keywords": [
    "jekyll"
  ],
  "author": "budparr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/budparr/jekyll-base/issues"
  },
  "homepage": "https://github.com/budparr/jekyll-base#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.12.10",
    "copyfiles": "^0.2.1",
    "cssnano": "^3.6.2",
    "eslint": "^2.11.1",
    "eslint-config-google": "^0.5.0",
    "imagemin-cli": "^2.1.0",
    "install": "^0.8.1",
    "jquery": "^2.2.4",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss": "^5.0.21",
    "postcss-calc": "^5.2.1",
    "postcss-cli": "^2.5.2",
    "postcss-color-function": "^2.0.1",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.1",
    "postcss-discard-comments": "^2.0.4",
    "postcss-flexibility": "^1.0.3",
    "postcss-import": "^8.1.2",
    "uglify-js": "^2.6.2"
  }
}
